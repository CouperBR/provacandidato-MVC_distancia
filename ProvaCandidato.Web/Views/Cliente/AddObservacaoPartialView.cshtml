@model ProvaCandidato.Data.Entidade.Cliente

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Adicionar observação</h4>
</div>
<div class="modal-body">
    <form action="/Cliente/CreateObservacao" method="post" id="addObservacaoForm">
        <div>
            @Html.Hidden("codigo", Model.Codigo)
            @Html.TextBox("observacao", null, new { @class = "form-control" }) <br />
            <button type="button" class="btn btn-success" id="adicionarObservacao">Adicionar</button>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
