            {
                <input type="text" name="@observacao.Codigo" value="@observacao.Observacao" id="observacao-@observacao.Codigo" />
                <button type="button">Excluir</button>
            }


        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Codigo }) |
